{
  "name": "Django Stdlib",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "batisteo.vscode-django"
      ],
      "settings": {
        "python.formatting.provider": "black",
        "python.linting.pylintEnabled": true,
        "python.linting.enabled": true
      }
    }
  },
  "forwardPorts": [8000],
  "postCreateCommand": "test -f requirements.txt && pip install -r requirements.txt; test -f .env.example && cp .env.example .env; python manage.py migrate || true",
  "postStartCommand": "python manage.py runserver 0.0.0.0:8000",
  "portsAttributes": {
    "8000": {
      "label": "Django Server",
      "onAutoForward": "openPreview"
    }
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb"
  }
}
